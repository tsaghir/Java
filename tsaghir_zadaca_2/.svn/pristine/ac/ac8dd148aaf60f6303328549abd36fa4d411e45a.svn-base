<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>org.foi.nwtis.tsaghir.i18n</base-name>
            <var>m</var>
        </resource-bundle> 
    </application>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{lokalizator.odaberiJezik}</from-action>
            <from-outcome>PromjenaJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizator.saljiPoruku}</from-action>
            <from-outcome>saljiPoruku</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizator.pregledPoruka}</from-action>
            <from-outcome>pregledPoruka</from-outcome>
            <to-view-id>/pregledPoruka.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/slanjePoruke.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>#{slanjePoruke.pocetna}</from-outcome>
            <from-outcome>Pocetna</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>#{slanjePoruke.pregledPoruka}</from-outcome>
            <from-outcome>PregledPoruka</from-outcome>
            <to-view-id>/pregledPoruka.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{slanjePoruke.saljiPoruku()}</from-action>
            <from-outcome>slanjePoruke</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pregledPoruka.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{slanjePoruke.pocetna}</from-action>
            <from-outcome>Pocetna</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizator.saljiPoruku}</from-action>
            <from-outcome>slanjePoruke</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
